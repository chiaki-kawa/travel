<div class="row justify-content-md-center">
  <div class="col-md-6">
    <h1>全ユーザー一覧</h1>
      <ul>
        <% @users.each do |user| %>
          <li>
            <%= user.name %> - <%= user.email %>
            <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </li>
        <% end %>
      </ul>
  </div>

  <div class="col-md-6">
    <h1>全コメント一覧</h1>
      <ul>
        <% @post_comments.each do |post_comment| %>
          <li>
            <%= @users.find(post_comment.user_id).name %> - <%= post_comment.comment %>
            <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか？' } %>
          </li>
        <% end %>
      </ul>
  </div>
</div>
