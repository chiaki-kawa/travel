<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがPostの時 -->
  <% if @range == "Post" %>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body%></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがPostではない時(= 検索対象モデルがtagの時) -->
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>