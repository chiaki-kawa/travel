  <h1>投稿フォーム</h1>
  <%= form_with model: @post do |f| %>
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.text_field :tag_ids, class: "form-control", id:'tag_ids',\
        placeholder: "タグをつける。複数つけるには','で区切ってください。" %>

    <%= f.submit '投稿' %>
  <% end %>
